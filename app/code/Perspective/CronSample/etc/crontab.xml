<?xml version="1.0" ?>
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Cron:etc/crontab.xsd">
    <group id="crongroup_sample">
        <job instance="Perspective\CronSample\Cron\SampleCron" method="execute" name="custom_sample_cronjob">
            <schedule>* * * * *</schedule>
        </job>
    </group>
    <group id="crongroup_sample"> 
        <job name="crongroup_sample_half_an_hour" instance="Perspective\CronSample\Cron\HalfAnHour" method="execute">
            <schedule>*/2 * * * *</schedule>
        </job>
    </group>
</config>