<?xml version="1.0"?>
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:ObjectManager/etc/config.xsd">

    <virtualType name="Perspective\T19CronTopNotification\Logger\Handler" type="Magento\Framework\Logger\Handler\Base">
        <arguments>
            <argument name="fileName" xsi:type="string">/var/log/t19cronnotification.log</argument>
        </arguments>
    </virtualType>
    
    <virtualType name="Perspective\T19CronTopNotification\Logger\Monolog" type="Magento\Framework\Logger\Monolog">
        <arguments>
            <argument name="handlers" xsi:type="array">
                <item name="system" xsi:type="object">Perspective\T19CronTopNotification\Logger\Handler</item>
            </argument>
        </arguments>
    </virtualType>

    <type name="Perspective\T19CronTopNotification\Cron\Notification">
        <arguments>
            <argument name="logger" xsi:type="object">Perspective\T19CronTopNotification\Logger\Monolog</argument>
        </arguments>
    </type>
</config>