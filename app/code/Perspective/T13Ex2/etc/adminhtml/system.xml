<?xml version="1.0"?>
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Config:etc/system_file.xsd">
    <system>
        <tab id="perspective" translate="label" sortOrder="1">
            <label>Perspective</label>
        </tab>
        <section id="t13ex2" translate="label" sortOrder="170" showInDefault="1" showInWebsite="1" showInStore="1">
            <class>separator-top</class>
            <label>Inventory</label>
            <tab>perspective</tab>

            <resource>Perspective_T13Ex2::inventory</resource>

            <group id="general" translate="label" type="text" sortOrder="10" showInDefault="1" showInWebsite="1" showInStore="1">
                <label>General</label>

                <field id="enable" translate="label" type="select" sortOrder="1" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Module Enable</label>
                    <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                </field>

                <field id="threshold" translate="label" type="text" sortOrder="1" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Only X left Threshold</label>
                    <validate>required-entry no-whitespace integer</validate>
                    <depends>
                        <field id="enable">1</field>
                    </depends>
                </field>

            </group>

        </section>
    </system>
</config>
