<?xml version="1.0"?>
<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" layout="2columns-right" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceContainer name="div.sidebar.additional" remove="true"/>
        <referenceContainer name="columns">
            <container name="div.sidebar.custom" htmlTag="div" htmlClass="sidebar sidebar-additional" after="-">
                <block class="Magento\Framework\View\Element\Template" name="custom.contact.text"
                        template="Magento_Contact::custom/contacttext.phtml">
                    <arguments>
                        <argument name="custom_text" translate="true" xsi:type="string">CUSTOM TEXT</argument>
                    </arguments>
                </block>         
            </container>
        </referenceContainer>

    </body>
</page>
